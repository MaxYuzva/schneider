default-color = #626469;
navigation-color = #3DCD58;

*
  margin: auto
  padding: 0
  font-weight: normal

html {
  font-size:100%
}

body
  background-color: #fafafa
  font-size: 0.8125em;
  line-height: 1.5em;
  font-family: "Arial Rounded", "Lucida Grande", Lucida, "Lucida Sans Unicode", sans-serif;
  color: default-color;
  font-weight: 100;
a
  color: #42b4e6


.userbar {
  height: 30px
  background #ffffff
  text-align: right
}

.content-wrp {
  max-width: 960px
  margin: 0 auto
  overflow hidden
}

.content-wrp._userbar {
  height: 100%
  &:before {
    content ""
    position: relative
    width: 0;
    height 100%;
    display: inline-block
    vertical-align: middle
  }
}

.userbar {
  text-align: right
}

.userbar-actionitem {
  font-size: 0.8em
  display: inline-block
  vertical-align: middle
  margin-left: 10px
  &:first-child {
    margin-left: 0
  }
}

.userbar-actionitem-ln {
  color: default-color
  font-size: 10.4px
  transition: color .3s;
}

.userbar-actionitem-pic {
  width 23px
  height 23px
  display: inline-block
  vertical-align: middle
  margin-right: 5px
  & g {
    transition: fill .3s;
    fill: default-color
  }
}

.userbar-actionitem-ln:hover {
  color #42b4e6
  & g {
    fill: #42b4e6
  }
}

.userbar-actionitem-ln-tx {
  display: inline-block
  vertical-align: middle
}

.navigation {
  background navigation-color
  height 55px
  border-bottom: 4px solid #009530
  vertical-align: middle

}

.content-wrp._navigation {
  height 100%;
}

.navigation-leftside, .navigation-rightside {
  display: inline-block
  height 100%
  &:before {
    content ""
    position relative
    width 0;
    height 100%;
    display: inline-block
    vertical-align middle
  }
}

.navigation-rightside {
  text-align: right
  float right
}

.navigation-dropdown {
  visibility hidden
  opacity 0
  position: absolute
}

.navigation-logo {
  display: inline-block;
  vertical-align: middle
  height 32px
  margin-right: 13px
  & img {
    max-width 100%
    max-height 100%
  }
}

.navigation-items {
  display: inline-block
  vertical-align: middle
  text-transform: uppercase
  font-size: 13px
  height 100%
}

.navigation-item {
  display: table-cell
  vertical-align: middle
  height: 55px;
  padding 0 13px
}

.navigation-item-ln {
  color #ffffff
}

.navigation-search {
  display: inline-block
  vertical-align: middle
}

.navigation-search-inp {
  height 24px
  padding .4em .5em
  border 1px solid #9fa0a4
  background #fff
  box-sizing: border-box
  font-size: 13px
  width 160px
  display: inline-block
  vertical-align: middle
}

.navigation-search-btn {
  display: inline-block
  width: 24px
  height: 22px
  border none
  vertical-align: middle
  margin-left: 10px
  background transparent
  &-pic {
    transform: scale(0.07);
    transform-origin: 0 0;
     & path {
       fill: #fff
       transition: fill .3s
     }
  }
}

.navigation-search-btn:hover {
  & path {
    fill: #009530
  }
}

.content-wrp._slider {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  right: 0;
}

.slider {
  margin-bottom: 40px
}

.slider-slides {
  font-size:0
  white-space nowrap
  max-width 100%
  overflow hidden
}

.slider-slide {
  display: inline-block
  position: relative
  padding-bottom 23.437408%
  width 100%
}

.slider-slide-pic {
  max-width 100%
  max-height 100%
  position absolute
  top: 0
  bottom: 0
  right: 0
  left: 0
}

.slider-slide-c {
  position: absolute
  top: 50%
  transform translateY(-50%)
  background rgba(0,0,0,0.5)
  max-width 50%
  padding 30px
  font-size: 14.4px
  line-height: 1.4em
  color #fff
  white-space normal
}

.slider-slide-c-t {
  font-size: 33.6px
  line-height:39.96px
  margin-bottom: 10px
}

.slider-slide-c-tx {
  font-size: 14.4px
  line-height: 20.16px
  font-weight: 100
  margin-bottom: 20px
}

.btn {
  background #42b4e6
  color #fff
  padding .8em 1.5em
  display: inline-block
}

.content-wrp._content {
  font-size: 0
  margin-bottom:20px
}

.content {
  font-size: 13px
  width: 80%
  box-sizing border-box
  padding-right: 35px
  display: inline-block
  vertical-align: top
}
.sidebar {
  font-size: 13px
  width 20%
  display: inline-block
  vertical-align: top
}

.sidebar-card {
  padding 10px 10px;
  background #fff
  margin-bottom:20px

  &-t {
    color: #3dcd58;
    font-size: 19.5px;
    line-height: 1.2em;
  }
  &-tx {
    font-size: 1em
    line-height:1.5em
    margin-bottom: 25px
  }
  &-l {
    list-style: none
  }
  img {
    margin-bottom: 5px
  }
}

.sidebar-quickLn {
  padding 0.5em 0
  display: inline-block
}
.articles {
  display: flex
  align-items: flex-start;
}
.articles-i {
  font-size: 13px;
  flex: 1 1 33.3333%
  height 295px
  &:first-child {
    padding-left: 0
    margin-right: 16px
  }
  &:last-child {
    margin-left: 16px
  }
}

.articles-pic {
  height 232px
}

.articles-t {
  color: #3dcd58;
  font-size: 1.5em;
  line-height: 1.2em;
}

.sections-separator {
  height 2px
  background #eaeaea
  margin-top: 30px
  margin-bottom: 30px
}

.gallery {
  display flex
  flex-direction column
}

.gallery-row {
  display: flex;
  flex-direction row
}

.gallery-i {
  flex 1 0 0
  position relative
}
.gallery-i._2x {
  flex 2 0 0
}
.gallery-i-img {
  display: block
}

.gallery-i-tx {
  position absolute
  bottom: 0
  left: 0
  width 100%
  box-sizing: border-box
  padding 10px
  font-size: 15.904px
  color: #fff
  background-image: -webkit-linear-gradient(top, transparent 0%, #000000 100%);
}
.gallery-i:hover .gallery-i-tx {
  background rgba(61, 205, 88, 0.9);
}

.productsSlider-wrp {
  white-space nowrap
  overflow hidden
}

.prodictsSlider-i {
  display: inline-block
  vertical-align: top
  white-space normal
  width: 20%;
  text-align: center

  &-ln {
    color #3dcd58
    font-size: 12.611px
  }
}

.footer {
  background #e7e6e6;
  padding-top 50px
}

.footer-links {
  text-align: right
}

.footer-links-wrp {
  text-align: left
  display: inline-block
  width: 82%
  padding-top:25px
  margin-bottom: 20px
  border-top: 1px solid #d2d2d2
}

.footer-links-t {
  font-size: 12.8px
  margin-bottom: 2px
  text-transform: uppercase
}

.footer-links-l {
  float left;
  width 25%
  list-style none
  padding-right: 10px;
  box-sizing border-box
}

.footer-links-ln {
  color #626469
  padding .5px 0
  display: inline-block
  font-size: 12px
  &:hover {
    color: #42b4e6
  }
}

.footer-social-l {
  list-style none
  text-align: right
}

.footer-social-i {
  width 33px;
  height: 33px
  background #fff
  display: inline-block
  margin-left:10px
  &:first-child {
    margin-left:0
  }
}

.footer-email {
  margin-bottom: 40px
}

.footer-logo {
  width 13.5%;
  display: inline-block
  vertical-align: middle
  position: relative
  top: 10px
  & img {
    max-width 100%
  }
}
.email-signup {
  margin-left:4.5%
  width 82%
  display: inline-block
  vertical-align: middle
}

.email-signup-tx {
  width: 40%
  display: inline-block
  vertical-align: middle
  font-size: 14px
}

.email-signup-form {
  width 57%
  margin-left: 3%
  display: inline-block
  vertical-align: middle
  text-align: right
}

.email-signup-inp {
  width 75%;
  height 30px
  padding 0 15px
  box-sizing border-box
  border none
  display: inline-block
  font-size: 14px
}

.email-signup-btn {
  width 21%
  margin-left: 2%
  padding 0
  height 30px
  line-height 30px
  display: inline-block
  text-align: center
  text-transform: uppercase
}

.footer-end {
  height 41px;
  background #3DCD58
  margin-top: 15px
  overflow hidden
}

.footer-end-ln {
  display: inline-block
  vertical-align: middle
  color #fff
  font-size: 11.7px
  &:after {
    content "|"
    position relative
    margin: 0 6px
  }
}

.solutions {
  margin-bottom: 45px
}

.section-header {
  overflow hidden
  margin-bottom: 10px
}

.section-t {
  font-size: 19.5px
  line-height:29.25px
  color: #3dcd58
}

.section-viewMoreLink {
  float right
  position: relative
  top: 6px
}

.footer-end-cpr {
  float right
  color #fff
  font-size: 11.7px
  height 41px
  &:before {
    content: ""
    position: relative
    width: auto
    height 100%;
    display: inline-block
    vertical-align: middle
  }
}

.footer-end-cpr-tx {
  display: inline-block
  vertical-align: middle
}

.footer-end-wrp {
  overflow hidden
  font-size: 11.7px
  height 41px
  &:before {
    content: ""
    position: relative
    width: auto
    height 100%;
    display: inline-block
    vertical-align: middle
  }
}

.footer-social-i-ln {
  display: inline-block
  background url("img/comm")
}